{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "registerAppName": {
      "type": "string"
    },
    "manageAppName": {
      "type": "string"
    },
    "sandboxAppName": {
      "type": "string"
    },
    "slotName": {
      "type": "string",
      "defaultValue": "staging"
    },
    "appHostingPlanName": {
      "type": "string"
    },
    "appHostingPlanResourceGroup": {
      "type": "string"
    },
    "appSettings": {
      "type": "object"
    },
    "customHostNames": {
      "type": "object"
    },
    "certificateThumbprint": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "This can be passed into the template via the reference function: [reference(resourceId(parameters('certificateResourceGroup'), 'Microsoft.Web/certificates', parameters('certificateName')), '2016-03-01').Thumbprint]"
      }
    }
  },
  "variables": {
    "siteProperties": {
      "phpVersion": "",
      "alwaysOn": true
    },
    "instancePrefix": "[if(equals(toUpper(parameters('appSettings').EnvironmentName),'PROD'),'',parameters('appSettings').EnvironmentName)]",
    "sandboxName": "[if(equals(length(variables('instancePrefix')),0),'(Sandbox)',concat(variables('instancePrefix'),' (Sandbox)'))]",
    "serverFarmId": "[resourceId(parameters('appHostingPlanResourceGroup'), 'Microsoft.Web/serverfarms', parameters('appHostingPlanName'))]",
    "useCustomHostname": "[greater(length(createArray(parameters('customHostNames').registerAppDomainName,parameters('customHostNames').manageAppDomainName,parameters('customHostNames').sandboxAppDomainName)), 0)]",
    "useRegisterCustomHostname": "[greater(length(parameters('customHostNames').registerAppDomainName),0)]",
    "useManageCustomHostname": "[greater(length(parameters('customHostNames').manageAppDomainName),0)]",
    "useSandboxCustomHostname": "[greater(length(parameters('customHostNames').sandboxAppDomainName),0)]"
  },
  "resources": [
    {
      "type": "Microsoft.Insights/components",
      "name": "[parameters('registerAppName')]",
      "apiVersion": "2015-05-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "[concat('hidden-link:', resourceGroup().id, '/providers/Microsoft.Web/sites/', parameters('registerAppName'))]": "Resource"
      },
      "properties": {
        "ApplicationId": "[parameters('registerAppName')]",
        "Request_Source": "IbizaWebAppExtensionCreate"
      }
    },
    {
      "apiVersion": "2015-08-01",
      "name": "[parameters('registerAppName')]",
      "type": "Microsoft.Web/sites",
      "kind": "api",
      "location": "[resourceGroup().location]",
      "properties": {
        "serverFarmId": "[variables('serverFarmId')]",
        "httpsOnly": true
      },
      "dependsOn": [
        "[resourceId('Microsoft.Insights/components/', parameters('registerAppName'))]"
      ],
      "resources": [
        {
          "apiVersion": "2015-08-01",
          "name": "web",
          "type": "config",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('registerAppName'))]"
          ],
          "properties": "[variables('siteProperties')]"
        },
        {
          "apiVersion": "2015-08-01",
          "name": "appsettings",
          "type": "config",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('registerAppName'))]"
          ],
          "properties": {
            "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(resourceId('Microsoft.Insights/components/', parameters('registerAppName')), '2015-05-01').InstrumentationKey]",
            "LoggingRedisConnectionString": "[parameters('appSettings').LoggingRedisConnectionString]",
            "AvmsPlusDatabaseConnectionString": "[parameters('appSettings').AvmsPlusDatabaseConnectionString]",
            "EnvironmentName": "[parameters('appSettings').EnvironmentName]",
            "LoggingRedisKey": "[parameters('appSettings').LoggingRedisKey]",
            "ApprenticeshipInfoApiBaseUrl": "[parameters('appSettings').ApprenticeshipInfoApiBaseUrl]",
            "CacheConnectionString": "[parameters('appSettings').CacheConnectionString]",
            "UseSandboxServices": "[parameters('appSettings').UseSandboxServices.ProductionSlot]",
            "CacheReferenceDataDuration": "[parameters('appSettings').CacheReferenceDataDuration]",
            "LiveApprenticeshipVacancyBaseUrl": "[parameters('appSettings').LiveApprenticeshipVacancyBaseUrl]",
            "VacancySearchUrl": "[parameters('appSettings').VacancySearchUrl]",
            "ApprenticeshipIndexAlias": "[parameters('appSettings').ApprenticeshipIndexAlias]",
            "LiveTraineeshipVacancyBaseUrl": "[parameters('appSettings').LiveTraineeshipVacancyBaseUrl]",
            "RecruitMongoConnectionString": "[parameters('appSettings').RecruitMongoConnectionString]",
            "RecruitMongoDatabaseName": "[parameters('appSettings').RecruitMongoDatabaseName]",
            "RecruitMongoCollectionName": "[parameters('appSettings').RecruitMongoCollectionName]",
            "InstanceName": "[variables('instancePrefix')]",
            "ElasticsearchUserName": "[parameters('appSettings').ElasticsearchUserName]",
            "ElasticsearchPassword": "[parameters('appSettings').ElasticsearchPassword]"
          }
        },
        {
          "apiVersion": "2015-08-01",
          "name": "slotconfignames",
          "type": "config",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('registerAppName'))]"
          ],
          "properties": {
            "appSettingNames": [ "APPINSIGHTS_INSTRUMENTATIONKEY", "EnvironmentName", "UseSandboxServices" ]
          }
        },
        {
          "apiVersion": "2015-08-01",
          "name": "[parameters('slotName')]",
          "type": "slots",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('registerAppName'))]"
          ],
          "properties": {
            "httpsOnly": true
          },
          "resources": [
            {
              "apiVersion": "2015-08-01",
              "name": "web",
              "type": "config",
              "dependsOn": [
                "[resourceId('Microsoft.Web/Sites/Slots', parameters('registerAppName'), parameters('slotName'))]"
              ],
              "properties": "[variables('siteProperties')]"
            },
            {
              "apiVersion": "2015-08-01",
              "name": "appsettings",
              "type": "config",
              "dependsOn": [
                "[resourceId('Microsoft.Web/Sites/Slots', parameters('registerAppName'), parameters('slotName'))]"
              ],
              "properties": {
                "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(resourceId('Microsoft.Insights/components/', parameters('registerAppName')), '2015-05-01').InstrumentationKey]",
                "LoggingRedisConnectionString": "[parameters('appSettings').LoggingRedisConnectionString]",
                "AvmsPlusDatabaseConnectionString": "[parameters('appSettings').AvmsPlusDatabaseConnectionString]",
                "EnvironmentName": "[concat(parameters('appSettings').EnvironmentName,'-',toUpper(parameters('slotName')))]",
                "LoggingRedisKey": "[parameters('appSettings').LoggingRedisKey]",
                "ApprenticeshipInfoApiBaseUrl": "[parameters('appSettings').ApprenticeshipInfoApiBaseUrl]",
                "CacheConnectionString": "[parameters('appSettings').CacheConnectionString]",
                "UseSandboxServices": "[parameters('appSettings').UseSandboxServices.StagingSlot]",
                "CacheReferenceDataDuration": "[parameters('appSettings').CacheReferenceDataDuration]",
                "LiveApprenticeshipVacancyBaseUrl": "[parameters('appSettings').LiveApprenticeshipVacancyBaseUrl]",
                "VacancySearchUrl": "[parameters('appSettings').VacancySearchUrl]",
                "ApprenticeshipIndexAlias": "[parameters('appSettings').ApprenticeshipIndexAlias]",
                "LiveTraineeshipVacancyBaseUrl": "[parameters('appSettings').LiveTraineeshipVacancyBaseUrl]",
                "RecruitMongoConnectionString": "[parameters('appSettings').RecruitMongoConnectionString]",
                "RecruitMongoDatabaseName": "[parameters('appSettings').RecruitMongoDatabaseName]",
                "RecruitMongoCollectionName": "[parameters('appSettings').RecruitMongoCollectionName]",
                "InstanceName": "[variables('instancePrefix')]",
                "ElasticsearchUserName": "[parameters('appSettings').ElasticsearchUserName]",
                "ElasticsearchPassword": "[parameters('appSettings').ElasticsearchPassword]"
              }
            }
          ]
        }
      ]
    },
    {
      "type": "Microsoft.Web/sites/hostnameBindings",
      "condition": "[variables('useRegisterCustomHostname')]",
      "name": "[concat(parameters('registerAppName'), '/', if(variables('useRegisterCustomHostname'), parameters('customHostnames').registerAppDomainName, 'placeholder'))]",
      "apiVersion": "2016-08-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "sslState": "SniEnabled",
        "thumbprint": "[parameters('certificateThumbprint')]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('registerAppName'))]"
      ]
    },
    {
      "type": "Microsoft.Insights/components",
      "name": "[parameters('manageAppName')]",
      "apiVersion": "2015-05-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "[concat('hidden-link:', resourceGroup().id, '/providers/Microsoft.Web/sites/', parameters('manageAppName'))]": "Resource"
      },
      "properties": {
        "ApplicationId": "[parameters('manageAppName')]",
        "Request_Source": "IbizaWebAppExtensionCreate"
      }
    },
    {
      "apiVersion": "2015-08-01",
      "name": "[parameters('manageAppName')]",
      "type": "Microsoft.Web/sites",
      "kind": "api",
      "location": "[resourceGroup().location]",
      "properties": {
        "serverFarmId": "[variables('serverFarmId')]",
        "httpsOnly": true
      },
      "dependsOn": [
        "[resourceId('Microsoft.Insights/components/', parameters('manageAppName'))]"
      ],
      "resources": [
        {
          "apiVersion": "2015-08-01",
          "name": "web",
          "type": "config",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('manageAppName'))]"
          ],
          "properties": "[variables('siteProperties')]"
        },
        {
          "apiVersion": "2015-08-01",
          "name": "appsettings",
          "type": "config",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('manageAppName'))]"
          ],
          "properties": {
            "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(resourceId('Microsoft.Insights/components/', parameters('manageAppName')), '2015-05-01').InstrumentationKey]",
            "LoggingRedisConnectionString": "[parameters('appSettings').LoggingRedisConnectionString]",
            "AvmsPlusDatabaseConnectionString": "[parameters('appSettings').AvmsPlusDatabaseConnectionString]",
            "EnvironmentName": "[parameters('appSettings').EnvironmentName]",
            "LoggingRedisKey": "[parameters('appSettings').LoggingRedisKey]",
            "ApprenticeshipInfoApiBaseUrl": "[parameters('appSettings').ApprenticeshipInfoApiBaseUrl]",
            "CacheConnectionString": "[parameters('appSettings').CacheConnectionString]",
            "UseSandboxServices": "[parameters('appSettings').UseSandboxServices.ProductionSlot]",
            "InstanceName": "[variables('instancePrefix')]",
            "CacheReferenceDataDuration": "[parameters('appSettings').CacheReferenceDataDuration]"
          }
        },
        {
          "apiVersion": "2015-08-01",
          "name": "slotconfignames",
          "type": "config",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('manageAppName'))]"
          ],
          "properties": {
            "appSettingNames": [ "APPINSIGHTS_INSTRUMENTATIONKEY", "EnvironmentName", "UseSandboxServices" ]
          }
        },
        {
          "apiVersion": "2015-08-01",
          "name": "[parameters('slotName')]",
          "type": "slots",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('manageAppName'))]"
          ],
          "properties": {
            "httpsOnly": true
          },
          "resources": [
            {
              "apiVersion": "2015-08-01",
              "name": "web",
              "type": "config",
              "dependsOn": [
                "[resourceId('Microsoft.Web/Sites/Slots', parameters('manageAppName'), parameters('slotName'))]"
              ],
              "properties": "[variables('siteProperties')]"
            },
            {
              "apiVersion": "2015-08-01",
              "name": "appsettings",
              "type": "config",
              "dependsOn": [
                "[resourceId('Microsoft.Web/Sites/Slots', parameters('manageAppName'), parameters('slotName'))]"
              ],
              "properties": {
                "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(resourceId('Microsoft.Insights/components/', parameters('manageAppName')), '2015-05-01').InstrumentationKey]",
                "LoggingRedisConnectionString": "[parameters('appSettings').LoggingRedisConnectionString]",
                "AvmsPlusDatabaseConnectionString": "[parameters('appSettings').AvmsPlusDatabaseConnectionString]",
                "EnvironmentName": "[concat(parameters('appSettings').EnvironmentName,'-',toUpper(parameters('slotName')))]",
                "LoggingRedisKey": "[parameters('appSettings').LoggingRedisKey]",
                "ApprenticeshipInfoApiBaseUrl": "[parameters('appSettings').ApprenticeshipInfoApiBaseUrl]",
                "CacheConnectionString": "[parameters('appSettings').CacheConnectionString]",
                "UseSandboxServices": "[parameters('appSettings').UseSandboxServices.StagingSlot]",
                "InstanceName": "[variables('instancePrefix')]",
                "CacheReferenceDataDuration": "[parameters('appSettings').CacheReferenceDataDuration]"
              }
            }
          ]
        }
      ]
    },
    {
      "type": "Microsoft.Web/sites/hostnameBindings",
      "condition": "[variables('useManageCustomHostname')]",
      "name": "[concat(parameters('manageAppName'), '/', if(variables('useManageCustomHostname'), parameters('customHostnames').manageAppDomainName, 'placeholder'))]",
      "apiVersion": "2016-08-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "sslState": "SniEnabled",
        "thumbprint": "[parameters('certificateThumbprint')]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('manageAppName'))]"
      ]
    },
    {
      "type": "Microsoft.Insights/components",
      "name": "[parameters('sandboxAppName')]",
      "apiVersion": "2015-05-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "[concat('hidden-link:', resourceGroup().id, '/providers/Microsoft.Web/sites/', parameters('sandboxAppName'))]": "Resource"
      },
      "properties": {
        "ApplicationId": "[parameters('sandboxAppName')]",
        "Request_Source": "IbizaWebAppExtensionCreate"
      }
    },
    {
      "apiVersion": "2015-08-01",
      "name": "[parameters('sandboxAppName')]",
      "type": "Microsoft.Web/sites",
      "kind": "api",
      "location": "[resourceGroup().location]",
      "properties": {
        "serverFarmId": "[variables('serverFarmId')]",
        "httpsOnly": true
      },
      "dependsOn": [
        "[resourceId('Microsoft.Insights/components/', parameters('sandboxAppName'))]"
      ],
      "resources": [
        {
          "apiVersion": "2015-08-01",
          "name": "web",
          "type": "config",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('sandboxAppName'))]"
          ],
          "properties": "[variables('siteProperties')]"
        },
        {
          "apiVersion": "2015-08-01",
          "name": "appsettings",
          "type": "config",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('sandboxAppName'))]"
          ],
          "properties": {
            "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(resourceId('Microsoft.Insights/components/', parameters('sandboxAppName')), '2015-05-01').InstrumentationKey]",
            "LoggingRedisConnectionString": "[parameters('appSettings').LoggingRedisConnectionString]",
            "AvmsPlusDatabaseConnectionString": "[parameters('appSettings').AvmsPlusDatabaseConnectionString]",
            "EnvironmentName": "[parameters('appSettings').EnvironmentName]",
            "LoggingRedisKey": "[parameters('appSettings').LoggingRedisKey]",
            "ApprenticeshipInfoApiBaseUrl": "[parameters('appSettings').ApprenticeshipInfoApiBaseUrl]",
            "CacheConnectionString": "[parameters('appSettings').CacheConnectionString]",
            "UseSandboxServices": "yes",
            "InstanceName": "[variables('sandboxName')]",
            "CacheReferenceDataDuration": "[parameters('appSettings').CacheReferenceDataDuration]"
          }
        },
        {
          "apiVersion": "2015-08-01",
          "name": "slotconfignames",
          "type": "config",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('sandboxAppName'))]"
          ],
          "properties": {
            "appSettingNames": [ "APPINSIGHTS_INSTRUMENTATIONKEY", "EnvironmentName", "UseSandboxServices" ]
          }
        },
        {
          "apiVersion": "2015-08-01",
          "name": "[parameters('slotName')]",
          "type": "slots",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('sandboxAppName'))]"
          ],
          "properties": {
            "httpsOnly": true
          },
          "resources": [
            {
              "apiVersion": "2015-08-01",
              "name": "web",
              "type": "config",
              "dependsOn": [
                "[resourceId('Microsoft.Web/Sites/Slots', parameters('sandboxAppName'), parameters('slotName'))]"
              ],
              "properties": "[variables('siteProperties')]"
            },
            {
              "apiVersion": "2015-08-01",
              "name": "appsettings",
              "type": "config",
              "dependsOn": [
                "[resourceId('Microsoft.Web/Sites/Slots', parameters('sandboxAppName'), parameters('slotName'))]"
              ],
              "properties": {
                "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(resourceId('Microsoft.Insights/components/', parameters('sandboxAppName')), '2015-05-01').InstrumentationKey]",
                "LoggingRedisConnectionString": "[parameters('appSettings').LoggingRedisConnectionString]",
                "AvmsPlusDatabaseConnectionString": "[parameters('appSettings').AvmsPlusDatabaseConnectionString]",
                "EnvironmentName": "[concat(parameters('appSettings').EnvironmentName,'-',toUpper(parameters('slotName')))]",
                "LoggingRedisKey": "[parameters('appSettings').LoggingRedisKey]",
                "ApprenticeshipInfoApiBaseUrl": "[parameters('appSettings').ApprenticeshipInfoApiBaseUrl]",
                "CacheConnectionString": "[parameters('appSettings').CacheConnectionString]",
                "UseSandboxServices": "yes",
                "InstanceName": "[variables('sandboxName')]",
                "CacheReferenceDataDuration": "[parameters('appSettings').CacheReferenceDataDuration]"
              }
            }
          ]
        }
      ]
    },
    {
      "type": "Microsoft.Web/sites/hostnameBindings",
      "condition": "[variables('useSandboxCustomHostname')]",
      "name": "[concat(parameters('sandboxAppName'), '/', if(variables('useSandboxCustomHostname'), parameters('customHostnames').sandboxAppDomainName, 'placeholder'))]",
      "apiVersion": "2016-08-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "sslState": "SniEnabled",
        "thumbprint": "[parameters('certificateThumbprint')]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('sandboxAppName'))]"
      ]
    }
  ],
  "outputs": {
  }
}
