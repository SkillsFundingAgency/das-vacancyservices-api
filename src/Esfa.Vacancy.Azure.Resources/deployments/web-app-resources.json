{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "registerAppName": {
      "type": "string"
    },
    "manageAppName": {
      "type": "string"
    },
    "slotName": {
      "type": "string",
      "defaultValue": "staging"
    },
    "appHostingPlanName": {
      "type": "string"
    },
    "appHostingEnvironment": {
      "type": "string"
    },
    "appServerFarmResourceGroup": {
      "type": "string"
    },
    "appSubscriptionId": {
      "type": "string"
    },
    "baseParameters": {
      "type": "object"
    },
    "appParameters": {
      "type": "object"
    }
  },
  "variables": {
    "siteProperties": {
      "phpVersion": "",
      "alwaysOn": true
    },
    "registerSlotFriendlyName": "[concat(parameters('registerAppName'),'-',parameters('slotName'))]",
    "manageAppSettings": "[parameters('baseParameters')]",
    "manageSlotFriendlyName": "[concat(parameters('manageAppName'),'-',parameters('slotName'))]",
    "registerAppSettings": "[union(parameters('baseParameters'),parameters('appParameters'))]"
  },
  "resources": [
    {
      "type": "microsoft.insights/components",
      "name": "[parameters('registerAppName')]",
      "apiVersion": "2015-05-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "[concat('hidden-link:', resourceGroup().id, '/providers/Microsoft.Web/sites/', parameters('registerAppName'))]": "Resource"
      },
      "properties": {
        "ApplicationId": "[parameters('registerAppName')]",
        "Request_Source": "IbizaWebAppExtensionCreate"
      }
    },
    {
      "type": "microsoft.insights/components",
      "name": "[variables('registerSlotFriendlyName')]",
      "apiVersion": "2015-05-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "[concat('hidden-link:', resourceGroup().id, '/providers/Microsoft.Web/sites/', parameters('registerAppName'),'/slots/',parameters('slotName'))]": "Resource"
      },
      "properties": {
        "ApplicationId": "[variables('registerSlotFriendlyName')]",
        "Request_Source": "IbizaWebAppExtensionCreate"
      }
    },
    {
      "apiVersion": "2015-08-01",
      "name": "[parameters('registerAppName')]",
      "type": "Microsoft.Web/sites",
      "kind": "api",
      "location": "[resourceGroup().location]",
      "properties": {
        "serverFarmId": "[concat('/subscriptions/', parameters('appSubscriptionId'),'/resourcegroups/', parameters('appServerFarmResourceGroup'), '/providers/Microsoft.Web/serverfarms/', parameters('appHostingPlanName'))]",
        "hostingEnvironment": "[parameters('appHostingEnvironment')]"
      },
      "dependsOn": [
        "[resourceId('microsoft.insights/components/', parameters('registerAppName'))]"
      ],
      "resources": [
        {
          "apiVersion": "2015-08-01",
          "name": "web",
          "type": "config",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('registerAppName'))]"
          ],
          "properties": "[variables('siteProperties')]"
        },
        {
          "apiVersion": "2015-08-01",
          "name": "appsettings",
          "type": "config",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('registerAppName'))]"
          ],
          "properties": {
            "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(resourceId('microsoft.insights/components/', parameters('registerAppName')), '2015-05-01').InstrumentationKey]",
            "LoggingRedisConnectionString": "[variables('registerAppSettings').LoggingRedisConnectionString]",
            "AvmsPlusDatabaseConnectionString": "[variables('registerAppSettings').AvmsPlusDatabaseConnectionString]",
            "EnvironmentName": "[variables('registerAppSettings').EnvironmentName]",
            "LoggingRedisKey": "[variables('registerAppSettings').LoggingRedisKey]",
            "ApprenticeshipInfoApiBaseUrl": "[variables('registerAppSettings').ApprenticeshipInfoApiBaseUrl]",
            "CacheConnectionString": "[variables('registerAppSettings').CacheConnectionString]",
            "UseSandboxServices": "[variables('registerAppSettings').UseSandboxServices.ProductionSlot]",
            "CacheReferenceDataDuration": "[variables('registerAppSettings').CacheReferenceDataDuration]",
            "LiveApprenticeshipVacancyBaseUrl": "[variables('registerAppSettings').LiveApprenticeshipVacancyBaseUrl]",
            "VacancySearchUrl": "[variables('registerAppSettings').VacancySearchUrl]",
            "ApprenticeshipIndexAlias": "[variables('registerAppSettings').ApprenticeshipIndexAlias]",
            "LiveTraineeshipVacancyBaseUrl": "[variables('registerAppSettings').LiveTraineeshipVacancyBaseUrl]",
            "RecruitMongoConnectionString": "[variables('registerAppSettings').RecruitMongoConnectionString]",
            "RecruitMongoDatabaseName": "[variables('registerAppSettings').RecruitMongoDatabaseName]",
            "RecruitMongoCollectionName": "[variables('registerAppSettings').RecruitMongoCollectionName]",
            "InstanceName": "[variables('registerAppSettings').InstanceName]"
          }
        },
        {
          "apiVersion": "2015-08-01",
          "name": "slotconfignames",
          "type": "config",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('registerAppName'))]"
          ],
          "properties": {
            "appSettingNames": [ "APPINSIGHTS_INSTRUMENTATIONKEY", "EnvironmentName", "UseSandboxServices" ]
          }
        },
        {
          "apiVersion": "2015-08-01",
          "name": "[parameters('slotName')]",
          "type": "slots",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('registerAppName'))]"
          ],
          "properties": {},
          "resources": [
            {
              "apiVersion": "2015-08-01",
              "name": "web",
              "type": "config",
              "dependsOn": [
                "[resourceId('Microsoft.Web/Sites/Slots', parameters('registerAppName'), parameters('slotName'))]"
              ],
              "properties": "[variables('siteProperties')]"
            },
            {
              "apiVersion": "2015-08-01",
              "name": "appsettings",
              "type": "config",
              "dependsOn": [
                "[resourceId('Microsoft.Web/Sites/Slots', parameters('registerAppName'), parameters('slotName'))]"
              ],
              "properties": {
                "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(resourceId('microsoft.insights/components/', parameters('registerAppName')), '2015-05-01').InstrumentationKey]",
                "LoggingRedisConnectionString": "[variables('registerAppSettings').LoggingRedisConnectionString]",
                "AvmsPlusDatabaseConnectionString": "[variables('registerAppSettings').AvmsPlusDatabaseConnectionString]",
                "EnvironmentName": "[concat(variables('registerAppSettings').EnvironmentName,'-',toUpper(parameters('slotName')))]",
                "LoggingRedisKey": "[variables('registerAppSettings').LoggingRedisKey]",
                "ApprenticeshipInfoApiBaseUrl": "[variables('registerAppSettings').ApprenticeshipInfoApiBaseUrl]",
                "CacheConnectionString": "[variables('registerAppSettings').CacheConnectionString]",
                "UseSandboxServices": "[variables('registerAppSettings').UseSandboxServices.StagingSlot]",
                "CacheReferenceDataDuration": "[variables('registerAppSettings').CacheReferenceDataDuration]",
                "LiveApprenticeshipVacancyBaseUrl": "[variables('registerAppSettings').LiveApprenticeshipVacancyBaseUrl]",
                "VacancySearchUrl": "[variables('registerAppSettings').VacancySearchUrl]",
                "ApprenticeshipIndexAlias": "[variables('registerAppSettings').ApprenticeshipIndexAlias]",
                "LiveTraineeshipVacancyBaseUrl": "[variables('registerAppSettings').LiveTraineeshipVacancyBaseUrl]",
                "RecruitMongoConnectionString": "[variables('registerAppSettings').RecruitMongoConnectionString]",
                "RecruitMongoDatabaseName": "[variables('registerAppSettings').RecruitMongoDatabaseName]",
                "RecruitMongoCollectionName": "[variables('registerAppSettings').RecruitMongoCollectionName]",
                "InstanceName": "[variables('registerAppSettings').InstanceName]"
              }
            }
          ]
        }
      ]
    },
    {
      "type": "microsoft.insights/components",
      "name": "[parameters('manageAppName')]",
      "apiVersion": "2015-05-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "[concat('hidden-link:', resourceGroup().id, '/providers/Microsoft.Web/sites/', parameters('manageAppName'))]": "Resource"
      },
      "properties": {
        "ApplicationId": "[parameters('manageAppName')]",
        "Request_Source": "IbizaWebAppExtensionCreate"
      }
    },
    {
      "type": "microsoft.insights/components",
      "name": "[variables('manageSlotFriendlyName')]",
      "apiVersion": "2015-05-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "[concat('hidden-link:', resourceGroup().id, '/providers/Microsoft.Web/sites/', parameters('manageAppName'),'/slots/',parameters('slotName'))]": "Resource"
      },
      "properties": {
        "ApplicationId": "[variables('manageSlotFriendlyName')]",
        "Request_Source": "IbizaWebAppExtensionCreate"
      }
    },
    {
      "apiVersion": "2015-08-01",
      "name": "[parameters('manageAppName')]",
      "type": "Microsoft.Web/sites",
      "kind": "api",
      "location": "[resourceGroup().location]",
      "properties": {
        "serverFarmId": "[concat('/subscriptions/', parameters('appSubscriptionId'),'/resourcegroups/', parameters('appServerFarmResourceGroup'), '/providers/Microsoft.Web/serverfarms/', parameters('appHostingPlanName'))]",
        "hostingEnvironment": "[parameters('appHostingEnvironment')]"
      },
      "dependsOn": [
        "[resourceId('microsoft.insights/components/', parameters('manageAppName'))]"
      ],
      "resources": [
        {
          "apiVersion": "2015-08-01",
          "name": "web",
          "type": "config",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('manageAppName'))]"
          ],
          "properties": "[variables('siteProperties')]"
        },
        {
          "apiVersion": "2015-08-01",
          "name": "appsettings",
          "type": "config",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('manageAppName'))]"
          ],
          "properties": {
            "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(resourceId('microsoft.insights/components/', parameters('manageAppName')), '2015-05-01').InstrumentationKey]",
            "LoggingRedisConnectionString": "[variables('manageAppSettings').LoggingRedisConnectionString]",
            "AvmsPlusDatabaseConnectionString": "[variables('manageAppSettings').AvmsPlusDatabaseConnectionString]",
            "EnvironmentName": "[variables('manageAppSettings').EnvironmentName]",
            "LoggingRedisKey": "[variables('manageAppSettings').LoggingRedisKey]",
            "ApprenticeshipInfoApiBaseUrl": "[variables('manageAppSettings').ApprenticeshipInfoApiBaseUrl]",
            "CacheConnectionString": "[variables('manageAppSettings').CacheConnectionString]",
            "UseSandboxServices": "[variables('manageAppSettings').UseSandboxServices.ProductionSlot]",
            "CacheReferenceDataDuration": "[variables('manageAppSettings').CacheReferenceDataDuration]"
          }
        },
        {
          "apiVersion": "2015-08-01",
          "name": "slotconfignames",
          "type": "config",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('manageAppName'))]"
          ],
          "properties": {
            "appSettingNames": [ "APPINSIGHTS_INSTRUMENTATIONKEY", "EnvironmentName", "UseSandboxServices" ]
          }
        },
        {
          "apiVersion": "2015-08-01",
          "name": "[parameters('slotName')]",
          "type": "slots",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('manageAppName'))]"
          ],
          "properties": {},
          "resources": [
            {
              "apiVersion": "2015-08-01",
              "name": "web",
              "type": "config",
              "dependsOn": [
                "[resourceId('Microsoft.Web/Sites/Slots', parameters('manageAppName'), parameters('slotName'))]"
              ],
              "properties": "[variables('siteProperties')]"
            },
            {
              "apiVersion": "2015-08-01",
              "name": "appsettings",
              "type": "config",
              "dependsOn": [
                "[resourceId('Microsoft.Web/Sites/Slots', parameters('manageAppName'), parameters('slotName'))]"
              ],
              "properties": {
                "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(resourceId('microsoft.insights/components/', parameters('manageAppName')), '2015-05-01').InstrumentationKey]",
                "LoggingRedisConnectionString": "[variables('manageAppSettings').LoggingRedisConnectionString]",
                "AvmsPlusDatabaseConnectionString": "[variables('manageAppSettings').AvmsPlusDatabaseConnectionString]",
                "EnvironmentName": "[concat(variables('manageAppSettings').EnvironmentName,'-',toUpper(parameters('slotName')))]",
                "LoggingRedisKey": "[variables('manageAppSettings').LoggingRedisKey]",
                "ApprenticeshipInfoApiBaseUrl": "[variables('manageAppSettings').ApprenticeshipInfoApiBaseUrl]",
                "CacheConnectionString": "[variables('manageAppSettings').CacheConnectionString]",
                "UseSandboxServices": "[variables('manageAppSettings').UseSandboxServices.StagingSlot]",
                "CacheReferenceDataDuration": "[variables('manageAppSettings').CacheReferenceDataDuration]"
              }
            }
          ]
        }
      ]
    }
  ],
  "outputs": {
  }
}
