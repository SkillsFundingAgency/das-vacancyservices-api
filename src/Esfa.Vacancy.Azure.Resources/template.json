{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
  "parameters": {
    "templateBaseUrl": {
      "type": "string",
      "metadata": {
        "description": "The base url for templates"
      }
    },
    "registerAppName": {
      "type": "string"
    },
    "manageAppName": {
      "type": "string"
    },
    "sandboxAppName": {
      "type": "string"
    },
    "slotName": {
      "type": "string",
      "defaultValue": "staging"
    },
    "appHostingPlanName": {
      "type": "string"
    },
    "appHostingEnvironment": {
      "type": "string",
      "defaultValue": ""
    },
    "appServerFarmResourceGroup": {
      "type": "string"
    },
    "LoggingRedisConnectionString": {
      "type": "string"
    },
    "AvmsPlusDatabaseConnectionString": {
      "type": "string"
    },
    "EnvironmentName": {
      "type": "string"
    },
    "LoggingRedisKey": {
      "type": "string"
    },
    "ApprenticeshipInfoApiBaseUrl": {
      "type": "string"
    },
    "LiveApprenticeshipVacancyBaseUrl": {
      "type": "string"
    },
    "VacancySearchUrl": {
      "type": "string"
    },
    "ApprenticeshipIndexAlias": {
      "type": "string"
    },
    "LiveTraineeshipVacancyBaseUrl": {
      "type": "string"
    },
    "CacheConnectionString": {
      "type": "string"
    },
    "UseSandboxServicesProdSlot": {
      "type": "string"
    },
    "UseSandboxServicesStagingSlot": {
      "type": "string"
    },
    "CacheReferenceDataDuration": {
      "type": "string"
    },
    "RecruitMongoConnectionString": {
      "type": "string"
    },
    "RecruitMongoDatabaseName": {
      "type": "string"
    },
    "RecruitMongoCollectionName": {
      "type": "string"
    },
    "InstanceName": {
      "type": "string",
      "defaultValue": ""
    },
    "ElasticsearchUserName": {
      "type": "string"
    },
    "ElasticsearchPassword": {
      "type": "string"
    },
    "aspSize": {
      "type": "string"
    },
    "aspInstances": {
      "type": "int"
    },
    "keyVaultCertificateName": {
      "type": "string"
    },
    "keyVaultName": {
      "type": "string"
    },
    "keyVaultResourceGroup": {
      "type": "string"
    },
    "registerAppDomainName": {
      "type": "string"
    },
    "manageAppDomainName": {
      "type": "string"
    },
    "sandboxAppDomainName": {
      "type": "string"
    }
  },
  "variables": {
    "webappResourcesTemplateUri": "[concat(parameters('templateBaseUrl'), '/deployments/web-app-resources.json')]",
    "appSettings": {
      "LoggingRedisConnectionString": "[parameters('LoggingRedisConnectionString')]",
      "AvmsPlusDatabaseConnectionString": "[parameters('AvmsPlusDatabaseConnectionString')]",
      "EnvironmentName": "[parameters('EnvironmentName')]",
      "LoggingRedisKey": "[parameters('LoggingRedisKey')]",
      "ApprenticeshipInfoApiBaseUrl": "[parameters('ApprenticeshipInfoApiBaseUrl')]",
      "CacheConnectionString": "[parameters('CacheConnectionString')]",
      "UseSandboxServices": {
        "ProductionSlot": "[parameters('UseSandboxServicesProdSlot')]",
        "StagingSlot": "[parameters('UseSandboxServicesStagingSlot')]"
      },
      "CacheReferenceDataDuration": "[parameters('CacheReferenceDataDuration')]",
      "ElasticsearchUserName": "[parameters('ElasticsearchUserName')]",
      "ElasticsearchPassword": "[parameters('ElasticsearchPassword')]",
      "LiveApprenticeshipVacancyBaseUrl": "[parameters('LiveApprenticeshipVacancyBaseUrl')]",
      "VacancySearchUrl": "[parameters('VacancySearchUrl')]",
      "ApprenticeshipIndexAlias": "[parameters('ApprenticeshipIndexAlias')]",
      "LiveTraineeshipVacancyBaseUrl": "[parameters('LiveTraineeshipVacancyBaseUrl')]",
      "RecruitMongoConnectionString": "[parameters('RecruitMongoConnectionString')]",
      "RecruitMongoDatabaseName": "[parameters('RecruitMongoDatabaseName')]",
      "RecruitMongoCollectionName": "[parameters('RecruitMongoCollectionName')]",
      "InstanceName": "[parameters('InstanceName')]"
    },
    "deployToASE": "[greater(length(parameters('appHostingEnvironment')), 0)]",
    "customHostNames": {
      "registerAppDomainName": "[parameters('registerAppDomainName')]",
      "manageAppDomainName": "[parameters('manageAppDomainName')]",
      "sandboxAppDomainName": "[parameters('sandboxAppDomainName')]"
    }
  },
  "resources": [
    {
      "apiVersion": "2017-08-01",
      "name": "[parameters('keyVaultCertificateName')]",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/SkillsFundingAgency/das-platform-building-blocks/master/templates/app-service-certificate.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "keyVaultCertificateName": {
            "value": "[parameters('keyVaultCertificateName')]"
          },
          "keyVaultName": {
            "value": "[parameters('keyVaultName')]"
          },
          "keyVaultResourceGroup": {
            "value": "[parameters('keyVaultResourceGroup')]"
          },
          "serverFarmId": {
            "value": "[if(variables('deployToASE'), reference(parameters('appHostingPlanName')).outputs.appServicePlanId.value, '')]"
          }
        }
      },
      "dependsOn": [
        "[parameters('appHostingPlanName')]"
      ]
    },
    {
      "apiVersion": "2017-08-01",
      "name": "register-web-app-resources-deployment",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('webappResourcesTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "registerAppName": {
            "value": "[parameters('registerAppName')]"
          },
          "manageAppName": {
            "value": "[parameters('manageAppName')]"
          },
          "sandboxAppName": {
            "value": "[parameters('sandboxAppName')]"
          },
          "slotName": {
            "value": "[parameters('slotName')]"
          },
          "appHostingPlanName": {
            "value": "[parameters('appHostingPlanName')]"
          },
          "appHostingEnvironment": {
            "value": "[parameters('appHostingEnvironment')]"
          },
          "appServerFarmResourceGroup": {
            "value": "[parameters('appServerFarmResourceGroup')]"
          },
          "appSettings": {
            "value": "[variables('appSettings')]"
          },
          "customHostNames": {
            "value": "[variables('customHostNames')]"
          },
          "certificateThumbprint": {
            "value": "[reference(parameters('keyVaultCertificateName')).outputs.CertificateThumbprint.value]"
          }
        }
      },
      "dependsOn": [
        "[parameters('appHostingPlanName')]"
      ]
    },
    {
      "apiVersion": "2017-08-01",
      "name": "[parameters('appHostingPlanName')]",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/SkillsFundingAgency/das-platform-building-blocks/master/templates/app-service-plan.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "appServicePlanName": {
            "value": "[parameters('appHostingPlanName')]"
          },
          "aseHostingEnvironmentName": {
            "value": "[parameters('appHostingEnvironment')]"
          },
          "aseResourceGroup": {
            "value": "[parameters('appServerFarmResourceGroup')]"
          },
          "aspSize": {
            "value": "[parameters('aspSize')]"
          },
          "aspInstances": {
            "value": "[parameters('aspInstances')]"
          }
        }
      },
      "dependsOn": []
    }
  ],
    "outputs": {
    }
}
