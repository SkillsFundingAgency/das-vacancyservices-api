{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appName": {
      "type": "string"
    },
    "appHostingPlanName": {
      "type": "string"
    },
    "appHostingEnvironment": {
      "type": "string"
    },
    "appServerFarmResourceGroup": {
      "type": "string"
    },
    "appSubscriptionId": {
      "type": "string"
    },
    "LoggingRedisConnectionString": {
      "type": "string"
    },
    "AvmsPlusDatabaseConnectionString": {
      "type": "string"
    },
    "EnvironmentName": {
      "type": "string"
    },
    "LoggingRedisKey": {
      "type": "string"
    },
    "ApprenticeshipInfoApiBaseUrl": {
      "type": "string"
    },
    "CacheConnectionString": {
      "type": "string"
    },
    "UseSandboxServices": {
      "type": "string"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Web/sites",
      "kind": "api",
      "name": "[parameters('appName')]",
      "apiVersion": "2016-03-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "[concat('hidden-related:', '/subscriptions/', parameters('appSubscriptionId'),'/resourcegroups/', parameters('appServerFarmResourceGroup'), '/providers/Microsoft.Web/serverfarms/', parameters('appHostingPlanName'))]": "empty"
      },
      "properties": {
        "siteConfig": {
          "appSettings": [
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[reference(resourceId('microsoft.insights/components/', parameters('appName')), '2015-05-01').InstrumentationKey]"
            },
            {
              "name": "LoggingRedisConnectionString",
              "value": "[parameters('LoggingRedisConnectionString')]"
            },
            {
              "name": "AvmsPlusDatabaseConnectionString",
              "value": "[parameters('AvmsPlusDatabaseConnectionString')]"
            },
            {
              "name": "EnvironmentName",
              "value": "[parameters('EnvironmentName')]"
            },
            {
              "name": "LoggingRedisKey",
              "value": "[parameters('LoggingRedisKey')]"
            },
            {
              "name": "ApprenticeshipInfoApiBaseUrl",
              "value": "[parameters('ApprenticeshipInfoApiBaseUrl')]"
            },
            {
              "name": "CacheConnectionString",
              "value": "[parameters('CacheConnectionString')]"
            },
            {
              "name": "UseSandboxServices",
              "value": "[parameters('UseSandboxServices')]"
            }
          ],
          "alwaysOn": true,
          "phpVersion": ""
        },
        "name": "[parameters('appName')]",
        "serverFarmId": "[concat('/subscriptions/', parameters('appSubscriptionId'),'/resourcegroups/', parameters('appServerFarmResourceGroup'), '/providers/Microsoft.Web/serverfarms/', parameters('appHostingPlanName'))]",
        "hostingEnvironment": "[parameters('appHostingEnvironment')]"
      },
      "dependsOn": [
        "[resourceId('microsoft.insights/components/', parameters('appName'))]"
      ]
    },
    {
      "type": "microsoft.insights/components",
      "name": "[parameters('appName')]",
      "apiVersion": "2015-05-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "[concat('hidden-link:', resourceGroup().id, '/providers/Microsoft.Web/sites/', parameters('appName'))]": "Resource"
      },
      "properties": {
        "ApplicationId": "[parameters('appName')]",
        "Request_Source": "IbizaWebAppExtensionCreate"
      }
    },
    {
      "type": "Microsoft.Web/sites/slots",
      "kind": "api",
      "name": "[concat(parameters('appName'),'/staging')]",
      "apiVersion": "2016-03-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "[concat('hidden-related:', '/subscriptions/', parameters('appSubscriptionId'),'/resourcegroups/', parameters('appServerFarmResourceGroup'), '/providers/Microsoft.Web/serverfarms/', parameters('appHostingPlanName'))]": "empty"
      },
      "properties": {
        "siteConfig": {
          "appSettings": [
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[reference(resourceId('microsoft.insights/components/', concat(parameters('appName'),'-staging')), '2015-05-01').InstrumentationKey]"
            },
            {
              "name": "LoggingRedisConnectionString",
              "value": "[parameters('LoggingRedisConnectionString')]"
            },
            {
              "name": "AvmsPlusDatabaseConnectionString",
              "value": "[parameters('AvmsPlusDatabaseConnectionString')]"
            },
            {
              "name": "EnvironmentName",
              "value": "[parameters('EnvironmentName')]"
            },
            {
              "name": "LoggingRedisKey",
              "value": "[parameters('LoggingRedisKey')]"
            },
            {
              "name": "ApprenticeshipInfoApiBaseUrl",
              "value": "[parameters('ApprenticeshipInfoApiBaseUrl')]"
            },
            {
              "name": "CacheConnectionString",
              "value": "[parameters('CacheConnectionString')]"
            }
          ],
          "alwaysOn": true,
          "phpVersion": ""
        },
        "name": "[concat(parameters('appName'),'(staging)')]",
        "serverFarmId": "[concat('/subscriptions/', parameters('appSubscriptionId'),'/resourcegroups/', parameters('appServerFarmResourceGroup'), '/providers/Microsoft.Web/serverfarms/', parameters('appHostingPlanName'))]",
        "hostingEnvironment": "[parameters('appHostingEnvironment')]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites/', parameters('appName'))]"
      ],
      "resources": [
        {
          "apiVersion": "2016-08-01",
          "name": "appsettings",
          "type": "config",
          "dependsOn": [
            "/subscriptions/b5cc5c07-80ef-4a37-a1ac-b551959c1427/resourceGroups/das-at-vac-reg-rg/providers/Microsoft.Web/sites/das-at-vac-reg-web/slots/staging"
            //"[resourceId('Microsoft.Web/sites/', concat(parameters('appName'),'/slots/staging'))]"
          ],
          "properties": {
            "UseSandboxServices": "[parameters('UseSandboxServices')]"
          }
        }
      ]
    },
    {
      "type": "microsoft.insights/components",
      "name": "[concat(parameters('appName'),'-staging')]",
      "apiVersion": "2015-05-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "[concat('hidden-link:', resourceGroup().id, '/providers/Microsoft.Web/sites/', parameters('appName'))]": "Resource"
      },
      "properties": {
        "ApplicationId": "[parameters('appName')]",
        "Request_Source": "IbizaWebAppExtensionCreate"
      }
    }
  ]
}